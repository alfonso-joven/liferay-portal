<definition>
	<var name="pageName" value="Media Gallery Test Page" />
	<var name="portletName" value="Media Gallery" />

	<set-up>
		<execute macro="User#pgFirstLogin" />

		<execute macro="Page#pgAdd">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Portlet#pgAdd">
			<var name="pageName" value="${pageName}" />
			<var name="portletName" value="${portletName}" />
		</execute>

		<execute macro="MediaGalleryPortlet#configurePG">
			<var name="pageName" value="${pageName}" />
		</execute>
	</set-up>

	<command name="AddDMFolderViaMG">
		<var name="folderDescription" value="DM Folder Description" />
		<var name="folderName" value="DM Folder Name" />

		<execute macro="DMFolder#addPGviaMG">
			<var name="folderDescription" value="${folderDescription}" />
			<var name="folderName" value="${folderName}" />
			<var name="pageName" value="${pageName}" />
		</execute>
	</command>

	<command name="EditDMFolderViaMG">
		<var name="folderDescription" value="DM Folder Description" />
		<var name="folderName" value="DM Folder Name" />

		<execute macro="DMFolder#addPGviaMG">
			<var name="folderDescription" value="${folderDescription}" />
			<var name="folderName" value="${folderName}" />
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="DMFolder#editPGviaMG">
			<var name="folderDescription" value="${folderDescription}" />
			<var name="folderName" value="${folderName}" />
			<var name="pageName" value="${pageName}" />
		</execute>
	</command>

	<command name="RemovePortletMG">
		<execute macro="Portlet#pgRemove">
			<var name="pageName" value="${pageName}" />
		</execute>
	</command>

	<command name="AddFolderDocumentViaMG">
		<var name="folderDescription" value="DM Folder Description" />
		<var name="folderName" value="DM Folder Name" />
		<var name="mediaDescription" value="DM Folder Image Description" />
		<var name="mediaFile" value="Document_1.jpg" />
		<var name="mediaTitle" value="DM Folder Image Title" />

		<execute macro="DMFolder#addPGviaMG">
			<var name="folderDescription" value="${folderDescription}" />
			<var name="folderName" value="${folderName}" />
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="DMFolderDocument#addPGviaMG">
			<var name="folderName" value="${folderName}" />
			<var name="mediaDescription" value="${mediaDescription}" />
			<var name="mediaFile" value="${mediaFile}" />
			<var name="mediaTitle" value="${mediaTitle}" />
			<var name="pageName" value="${pageName}" />
		</execute>
	</command>

	<command name="DeleteFolderDocumentViaMG">
		<var name="folderDescription" value="DM Folder Description" />
		<var name="folderName" value="DM Folder Name" />
		<var name="mediaDescription" value="DM Folder Image Description" />
		<var name="mediaFile" value="Document_1.jpg" />
		<var name="mediaTitle" value="DM Folder Image Title" />

		<execute macro="DMFolder#addPGviaMG">
			<var name="folderDescription" value="${folderDescription}" />
			<var name="folderName" value="${folderName}" />
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="DMFolderDocument#addPGviaMG">
			<var name="folderName" value="${folderName}" />
			<var name="mediaDescription" value="${mediaDescription}" />
			<var name="mediaFile" value="${mediaFile}" />
			<var name="mediaTitle" value="${mediaTitle}" />
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="DMFolderDocument#deletePGviaMG">
			<var name="folderName" value="${folderName}" />
			<var name="mediaTitle" value="${mediaTitle}" />
		</execute>
	</command>

	<command name="EditFolderDocumentViaMG">
		<var name="folderDescription" value="DM Folder Description" />
		<var name="folderName" value="DM Folder Name" />
		<var name="mediaDescription" value="DM Folder Image Description" />
		<var name="mediaFile" value="Document_1.jpg" />
		<var name="mediaTitle" value="DM Folder Image Title" />

		<execute macro="DMFolder#addPGviaMG">
			<var name="folderDescription" value="${folderDescription}" />
			<var name="folderName" value="${folderName}" />
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="DMFolderDocument#addPGviaMG">
			<var name="folderName" value="${folderName}" />
			<var name="mediaDescription" value="${mediaDescription}" />
			<var name="mediaFile" value="${mediaFile}" />
			<var name="mediaTitle" value="${mediaTitle}" />
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="DMFolderDocument#editPGviaMG">
			<var name="folderName" value="${folderName}" />
			<var name="mediaDescription" value="${mediaDescription}" />
			<var name="mediaTitle" value="${mediaTitle}" />
		</execute>
	</command>

	<tear-down>
		<execute macro="DMFolder#tearDownPGviaMG">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute macro="Page#pgTearDown" />
	</tear-down>
</definition>