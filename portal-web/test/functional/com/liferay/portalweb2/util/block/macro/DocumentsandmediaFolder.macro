<definition>
	<command name="addPG">
		<execute action="PGDocumentsandmedia#click" locator-key1="TOOLBAR_ADD" />
		<execute action="PGDocumentsandmedia#click" locator-key1="ADD_MENULIST_FOLDER" />

		<execute action="PGDocumentsandmediaAddfolder#type" locator-key1="NAME_FIELD" value1="${documentsandmediaFolderTitle}"/>
		<execute action="PGDocumentsandmediaAddfolder#type" locator-key1="DESCRIPTION_FIELD" value1="${documentsandmediaFolderContent}" />
		<execute action="PGDocumentsandmediaAddfolder#click" locator-key1="SAVE_BUTTON" />

		<execute action="PGDocumentsandmedia#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="addDocumentPG">
		<execute action="PGDocumentsandmedia#click" locator-key1="ENTRIES_FOLDER" />

		<execute action="PGDocumentsandmediaFolder#click" locator-key1="TOOLBAR_ADD" />
		<execute action="PGDocumentsandmediaFolder#click" locator-key1="ADD_MENULIST_BASIC_DOCUMENT" />
		<execute action="PGDocumentsandmediaAdddocument#uploadCommonFile" locator-key1="FILE_FIELD" value1="Document_1.doc" />
		<execute action="PGDocumentsandmediaAdddocument#type" locator-key1="TITLE_FIELD" value1="${documentsandmediaEntryTitle}" />
		<execute action="PGDocumentsandmediaAdddocument#type" locator-key1="DESCRIPTION_FIELD" value1="${documentsandmediaEntryContent}" />
		<execute action="PGDocumentsandmediaAdddocument#click" locator-key1="PUBLISH_BUTTON" />

		<execute action="PGDocumentsandmediaFolder#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="pgEdit">
		<execute action="PGDocumentsandmedia#assertTextEquals" locator-key1="ENTRIES_FOLDER_TITLE" value1="${documentsandmediaFolderTitle}" />
		<execute action="PGDocumentsandmedia#click" locator-key1="ENTRIES_FOLDER_ACTIONS" />
		<execute action="PGDocumentsandmedia#click" locator-key1="FOLDER_MENULIST_EDIT" />

		<execute action="PGDocumentsandmediaEditfolder#type" locator-key1="NAME_FIELD" value1="${documentsandmediaFolderTitleEdit}" />
		<execute action="PGDocumentsandmediaEditfolder#type" locator-key1="DESCRIPTION_FIELD" value1="${documentsandmediaFolderContentEdit}" />
		<execute action="PGDocumentsandmediaEditfolder#click" locator-key1="SAVE_BUTTON" />

		<execute action="PGDocumentsandmedia#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
		<execute action="PGDocumentsandmedia#assertTextEquals" locator-key1="ENTRIES_FOLDER_TITLE" value1="${documentsandmediaFolderTitleEdit}" />
	</command>

	<command name="deletePG">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGDocumentsandmedia#assertElementPresent" locator-key1="ENTRIES_FOLDER" />
		<execute action="PGDocumentsandmedia#assertTextEquals" locator-key1="ENTRIES_FOLDER_TITLE" value1="${documentsandmediaFolderTitle}" />
		<execute action="PGDocumentsandmedia#click" locator-key1="ENTRIES_FOLDER_SELECT" />
		<execute action="PGDocumentsandmedia#click" locator-key1="TOOLBAR_ACTIONS" />
		<execute action="PGDocumentsandmedia#click" locator-key1="ACTIONS_MENULIST_DELETE" />
		<execute action="PGDocumentsandmedia#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete the selected entries?" />
		<execute action="PGDocumentsandmediaFolder#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
		<execute action="PGDocumentsandmedia#assertElementNotPresent" locator-key1="ENTRIES_FOLDER" />
	</command>

	<command name="tearDownCP">
		<execute macro="Page#cpGoto">
			<var name="portletName" value="Documents and Media" />
		</execute>

		<if>
			<condition action="PGDocumentsandmedia#isElementPresent" locator-key1="TOOLBAR_SELECT_ALL_CHECKBOX" />
			<then>
					<execute action="PGDocumentsandmedia#check" locator-key1="TOOLBAR_SELECT_ALL_CHECKBOX" />
					<execute action="PGDocumentsandmedia#click" locator-key1="TOOLBAR_ACTIONS" />
					<execute action="PGDocumentsandmedia#assertElementPresent" locator-key1="ACTIONS_MENULIST_DELETE" />
					<execute action="PGDocumentsandmedia#click" locator-key1="ACTIONS_MENULIST_DELETE" />
					<execute action="PGDocumentsandmedia#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete the selected entries?" />
					<execute action="PGDocumentsandmedia#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
					
			</then>
		</if>

	</command>

	<command name="viewCP">
		<execute macro="Page#pgGoto">
			<var name="folderName" value="${folderName}" />
		</execute>
		<execute action="PGDocumentsandmedia#click" locator-key1="ENTRIES_FOLDER" />
		<execute action="PGDocumentsandmediaFolder#assertTextEquals" locator-key1="BREADCRUMB_FOLDER" value1="${documentsandmediaFolderTitle}" />
	</command>
</definition>
