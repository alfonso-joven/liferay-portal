<definition>
	<command name="cpGoto">
		<execute macro="Page#openURL" />

		<execute action="Dockbar#mouseOver" locator-key1="GO_TO" />
		<execute action="Dockbar#click" locator-key1="GO_TO" />
		<execute action="Dockbar#click" locator-key1="GO_TO_CONTROL_PANEL" />

		<execute action="Home#click" locator1="//ul[@class='category-portlets']/li/a[contains(.,'${portletName}')]" />
	</command>

	<command name="cpGotoStaging">
		<execute macro="Page#openURL">
			<var name="pageStaging" value="true" />
		</execute>

		<execute action="Dockbar#mouseOver" locator-key1="GO_TO_STAGING" />
		<execute action="Dockbar#click" locator-key1="GO_TO" />
		<execute action="Dockbar#click" locator-key1="GO_TO_CONTROL_PANEL" />

		<execute action="Home#click" locator1="//ul[@class='category-portlets']/li/a[contains(.,'${portletName}')]" />
	</command>

	<command name="isPresent">
		<execute macro="Page#openURL" />

		<execute action="Home#isElementPresent" locator1="//nav/ul/li/a/span[.=' ${pageName}']" />
	</command>

	<command name="openURL">
		<if>
			<equals arg1="${pageType}" arg2="Site" />
			<then>
				<var name="pageTypeKey" value="SITE" />
			</then>
			<elseif>
				<equals arg1="${pageType}" arg2="Organization" />
				<then>
					<var name="pageTypeKey" value="ORGANIZATION" />
				</then>
			</elseif>
			<else>
				<var name="pageTypeKey" value="GUEST" />
			</else>
		</if>

		<if>
			<equals arg1="${pageAccess}" arg2="Private" />
			<then>
				<var name="pageAccessKey" value="_PRIVATE" />
			</then>
			<else>
				<var name="pageAccessKey" value="" />
			</else>
		</if>

		<if>
			<equals arg1="${pageStaging}" arg2="true" />
			<then>
				<var name="pageStagingKey" value="_STAGING" />
			</then>
			<else>
				<var name="pageStagingKey" value="" />
			</else>
		</if>

		<execute action="Home#open" locator-key1="${pageTypeKey}${pageAccessKey}${pageStagingKey}_URL" />
	</command>

	<command name="pgGoto">
		<execute macro="Page#openURL" />

		<execute action="Home#click" locator1="//nav/ul/li/a/span[.=' ${pageName}']" />
	</command>

	<command name="pgGotoOrganization">
		<execute macro="Page#openURL">
			<var name="pageType" value="Organization" />
		</execute>

		<execute action="Home#click" locator1="//nav/ul/li/a/span[.=' ${pageName}']" />
	</command>

	<command name="pgGotoSitePrivate">
		<execute macro="Page#openURL">
			<var name="pageAccess" value="Private" />
			<var name="pageType" value="Site" />
		</execute>

		<execute action="Home#click" locator1="//nav/ul/li/a/span[.=' ${pageName}']" />
	</command>

	<command name="pgGotoSitePublic">
		<execute macro="Page#openURL">
			<var name="pageType" value="Site" />
		</execute>

		<execute action="Home#click" locator1="//nav/ul/li/a/span[.=' ${pageName}']" />
	</command>

	<command name="pgAdd">
		<execute macro="Page#openURL" />

		<execute action="Dockbar#mouseOver" locator-key1="ADD" />
		<execute action="Dockbar#click" locator-key1="ADD_PAGE" />

		<execute action="Home#type" locator-key1="NEW_PAGE_FIELD" value1="${pageName}" />
		<execute action="Home#click" locator-key1="NEW_PAGE_SAVE" />
		<execute action="Home#click" locator1="//nav/ul/li/a/span[.=' ${pageName}']" />
	</command>

	<command name="pgAddOrganization">
		<execute macro="Page#pgAdd">
			<var name="pageName" value="${pageName}" />
			<var name="pageType" value="Organization" />
		</execute>
	</command>

	<command name="pgAddSitePrivate">
		<execute macro="Page#pgAdd">
			<var name="pageAccess" value="Private" />
			<var name="pageName" value="${pageName}" />
			<var name="pageType" value="Site" />
		</execute>
	</command>

	<command name="pgAddSitePublic">
		<execute macro="Page#pgAdd">
			<var name="pageName" value="${pageName}" />
			<var name="pageType" value="Site" />
		</execute>
	</command>

	<command name="pgAddStaging">
		<execute macro="Page#pgAdd">
			<var name="pageName" value="${pageName}" />
			<var name="pageStaging" value="true" />
		</execute>
	</command>

	<command name="pgTearDown">
		<execute macro="Page#openURL" />

		<while>
			<condition action="Home#isElementPresent" locator-key1="PAGE_2" />
			<then>
				<execute action="Home#mouseOver" locator-key1="PAGE_2" />
				<execute action="Home#click" locator-key1="PAGE_DELETE_2" />
				<execute action="Home#confirm" locator-key1="PAGE_CONFIRM" value1="Are you sure you want to delete this page?" />
				<execute action="Home#assertElementNotPresent" locator-key1="PAGE_DELETE_2" />
			</then>
		</while>
	</command>
</definition>