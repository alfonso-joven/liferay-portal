<definition>
	<command name="addCP">
		<execute macro="Page#cpGoto">
			<var name="portletName" value="Calendar" />
		</execute>

		<execute action="CPCalendar#click" locator-key1="VIEW_SUMMARY" />
		<execute action="CPCalendar#click" locator-key1="ADD_EVENT_BUTTON" />

		<execute action="CPCalendarAddEvent#type" locator-key1="TITLE_FIELD" value1="${eventTitle}" />
		<execute action="CPCalendarAddEvent#click" locator-key1="SAVE_BUTTON" />

		<execute action="CPCalendar#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
		<execute action="CPCalendar#assertElementPresent" locator-key1="EVENT_TABLE_TIME" />
		<execute action="CPCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TITLE" value1="${eventTitle}" />
		<execute action="CPCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TYPE" value1="Anniversary" />
		<execute action="CPCalendar#assertElementPresent" locator-key1="EVENT_TABLE_ACTIONS" />
	</command>

	<command name="addPG">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGCalendar#click" locator-key1="VIEW_SUMMARY" />
		<execute action="PGCalendar#click" locator-key1="ADD_EVENT_BUTTON" />

		<execute action="PGCalendarAddEvent#type" locator-key1="TITLE_FIELD" value1="${eventTitle}" />
		<execute action="PGCalendarAddEvent#click" locator-key1="SAVE_BUTTON" />

		<execute action="PGCalendar#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
		<execute action="PGCalendar#assertElementPresent" locator-key1="EVENT_TABLE_TIME" />
		<execute action="PGCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TITLE" value1="${eventTitle}" />
		<execute action="PGCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TYPE" value1="Anniversary" />
		<execute action="PGCalendar#assertElementPresent" locator-key1="EVENT_TABLE_ACTIONS" />
	</command>

	<command name="deleteCP">
		<execute macro="Page#cpGoto">
			<var name="portletName" value="Calendar" />
		</execute>

		<execute action="CPCalendar#click" locator-key1="VIEW_SUMMARY" />
		<execute action="CPCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TITLE" value1="${eventTitle}" />
		<execute action="CPCalendar#click" locator-key1="EVENT_TABLE_ACTIONS" />
		<execute action="CPCalendar#click" locator-key1="EVENT_MENULIST_DELETE" />
		<execute action="CPCalendar#confirm" locator-key1="CONFIRMATION" />
		<execute action="CPCalendar#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
	</command>

	<command name="deletePG">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGCalendar#click" locator-key1="VIEW_SUMMARY" />
		<execute action="PGCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TITLE" value1="${eventTitle}" />
		<execute action="PGCalendar#click" locator-key1="EVENT_TABLE_ACTIONS" />
		<execute action="PGCalendar#click" locator-key1="EVENT_MENULIST_DELETE" />
		<execute action="PGCalendar#confirm" locator-key1="CONFIRMATION" />
		<execute action="PGCalendar#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
	</command>

	<command name="editCP">
		<execute macro="Page#cpGoto">
			<var name="portletName" value="Calendar" />
		</execute>

		<execute action="CPCalendar#click" locator-key1="VIEW_SUMMARY" />
		<execute action="CPCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TITLE" value1="${eventTitle}" />
		<execute action="CPCalendar#click" locator-key1="EVENT_TABLE_ACTIONS" />
		<execute action="CPCalendar#click" locator-key1="EVENT_MENULIST_EDIT" />

		<execute action="CPCalendarEditEvent#type" locator-key1="TITLE_FIELD" value1="${eventTitleEdit}" />
		<execute action="CPCalendarEditEvent#click" locator-key1="SAVE_BUTTON" />

		<execute action="CPCalendar#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
		<execute action="CPCalendar#assertElementPresent" locator-key1="EVENT_TABLE_TIME" />
		<execute action="CPCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TITLE" value1="${eventTitleNew}" />
		<execute action="CPCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TYPE" value1="Anniversary" />
		<execute action="CPCalendar#assertElementPresent" locator-key1="EVENT_TABLE_ACTIONS" />
	</command>

	<command name="editPG">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGCalendar#click" locator-key1="VIEW_SUMMARY" />
		<execute action="PGCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TITLE" value1="${eventTitle}" />
		<execute action="PGCalendar#click" locator-key1="EVENT_TABLE_ACTIONS" />
		<execute action="PGCalendar#click" locator-key1="EVENT_MENULIST_EDIT" />

		<execute action="PGCalendarEditEvent#type" locator-key1="TITLE_FIELD" value1="${eventTitleNew}" />
		<execute action="PGCalendarEditEvent#click" locator-key1="SAVE_BUTTON" />

		<execute action="PGCalendar#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
		<execute action="PGCalendar#assertElementPresent" locator-key1="EVENT_TABLE_TIME" />
		<execute action="PGCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TITLE" value1="${eventTitleEdit}" />
		<execute action="PGCalendar#assertTextEquals" locator-key1="EVENT_TABLE_TYPE" value1="Anniversary" />
		<execute action="PGCalendar#assertElementPresent" locator-key1="EVENT_TABLE_ACTIONS" />
	</command>

	<command name="tearDownCP">
		<execute macro="Page#cpGoto">
			<var name="portletName" value="Calendar" />
		</execute>

		<execute action="PGCalendar#click" locator-key1="VIEW_EVENTS" />

		<while>
			<condition action="CPCalendarEvents#isElementPresent" locator-key1="EVENT_TABLE_ACTIONS" />
			<then>
				<execute action="CPCalendarEvents#click" locator-key1="EVENT_TABLE_ACTIONS" />
				<execute action="CPCalendarEvents#click" locator-key1="EVENT_MENULIST_DELETE" />
				<execute action="CPCalendarEvents#confirm" locator-key1="CONFIRMATION" />
				<execute action="CPCalendarEvents#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
			</then>
		</while>

		<execute action="CPCalendarEvents#assertElementNotPresent" locator-key1="EVENT_TABLE_ACTIONS" />
	</command>
</definition>