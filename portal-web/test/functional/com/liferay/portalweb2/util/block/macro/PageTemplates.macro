<definition>

	<command name="cpAdd">
		<execute macro="Page#cpGoto">
			<var name="portletName" value="Page Templates" />
		</execute>

		<execute action="CPPagetemplates#click" locator-key1="ADD_BUTTON" />

		<execute action="CPPagetemplatesAdd#type" locator-key1="NAME_FIELD" value1="${pageTemplateName}" />
		<execute action="CPPagetemplatesAdd#assertChecked" locator-key1="ACTIVE_CHECKBOX" />
		<execute action="CPPagetemplatesAdd#click" locator-key1="SAVE_BUTTON" />
		<execute action="CPPagetemplates#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
		<execute action="CPPagetemplates#assertTextEquals" locator-key1="PAGE_TEMPLATE_TABLE_NAME_1" value1="${pageTemplateName}" />
		<execute action="CPPagetemplates#assertTextEquals" locator-key1="PAGE_TEMPLATE_TABLE_ACTIVE_1" value1="${pageTemplateActive}" />
	</command>

	<command name="cpEdit">
		<execute macro="Page#cpGoto">
			<var name="portletName" value="Page Templates" />
		</execute>

		<execute action="CPPagetemplates#assertTextEquals" locator-key1="PAGE_TEMPLATE_TABLE_NAME_1" value1="${pageTemplateName}" />
		<execute action="CPPagetemplates#click" locator-key1="PAGE_TEMPLATE_TABLE_ACTIONS_1" />
		<execute action="CPPagetemplates#click" locator-key1="PAGE_TEMPLATE_MENULIST_EDIT" />

		<execute action="CPPagetemplatesAdd#uncheck" locator-key1="ACTIVE_CHECKBOX" />
		<execute action="CPPagetemplatesAdd#assertNotChecked" locator-key1="ACTIVE_CHECKBOX" />
		<execute action="CPPagetemplatesEdit#assertTextEquals" locator-key1="CONFIGURATION_OPEN" value1="Open Page Template" />
		<execute action="CPPagetemplatesAdd#click" locator-key1="SAVE_BUTTON" />

		<execute action="CPPagetemplates#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
		<execute action="CPPagetemplates#assertTextEquals" locator-key1="PAGE_TEMPLATE_TABLE_NAME_1" value1="${pageTemplateName}" />
		<execute action="CPPagetemplates#assertTextNotEquals" locator-key1="PAGE_TEMPLATE_TABLE_ACTIVE_1" value1="${pageTemplateActive}" />
	</command>

	<command name="cpTearDown">
		<execute macro="Page#cpGoto">
			<var name="portletName" value="Page Templates" />
		</execute>

		<while>
			<condition action="CPPagetemplates#isElementPresent" locator-key1="PAGE_TEMPLATE_TABLE_ACTIONS_1" />
			<then>
				<execute action="CPPagetemplates#click" locator-key1="PAGE_TEMPLATE_TABLE_ACTIONS_1" />
				<execute action="CPPagetemplates#click" locator-key1="PAGE_TEMPLATE_MENULIST_DELETE" />
				<execute action="CPPagetemplates#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete this?" />
				<execute action="CPPagetemplates#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
			</then>
		</while>

	</command>
</definition>