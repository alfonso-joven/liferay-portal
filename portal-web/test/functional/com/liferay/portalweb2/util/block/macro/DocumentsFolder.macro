<definition>
	<command name="addPGviaDMD">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGDocumentlibrarydisplay#click" locator-key1="FOLDER_MENU_ADD_FOLDER" />

		<execute action="PGDocumentlibrarydisplayAddfolder#type" locator-key1="FOLDER_NAME" value1="${documentFolderName}" />
		<execute action="PGDocumentlibrarydisplayAddfolder#click" locator-key1="SAVE_BUTTON" />

		<execute action="PGDocumentlibrarydisplay#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
		<execute action="PGDocumentlibrarydisplay#assertTextEquals" locator-key1="FOLDERS_TABLE_NAME_1" value1="${documentFolderName}" />
		<execute action="PGDocumentlibrarydisplay#click" locator-key1="FOLDERS_TABLE_NAME_1" value1="${documentFolderName}" />

		<execute action="PGDocumentlibrarydisplayFolder#assertTextEquals" locator-key1="FOLDER_NAME" value1="${documentFolderName}" />
		<execute action="PGDocumentlibrarydisplayFolder#assertElementPresent" locator-key1="ASSET_THUMBNAIL" />
		<execute action="PGDocumentlibrarydisplayFolder#assertTextEquals" locator-key1="ASSET_NAME" value1="${documentFolderName}" />
		<execute action="PGDocumentlibrarydisplayFolder#assertTextEquals" locator-key1="INFO_MESSAGE" value1="There are no documents or media files in this folder." />
	</command>

	<command name="tearDownPGviaDMD">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<while>
			<condition action="PGDocumentlibrarydisplay#isElementPresent" locator-key1="FOLDERS_TABLE_ACTIONS_BUTTON_1" />
			<then>
				<execute action="PGDocumentlibrarydisplay#click" locator-key1="FOLDERS_TABLE_ACTIONS_BUTTON_1" />
				<execute action="PGDocumentlibrarydisplay#click" locator-key1="FOLDER_MENULIST_DELETE" />
				<execute action="PGDocumentlibrarydisplay#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete this?" />
				<execute action="PGDocumentlibrarydisplay#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
			</then>
		</while>
	</command>
</definition>