<definition>
	<command name="pgMediaGalleryConfiguration">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGMediagallery#assertElementPresent" locator-key1="OPTIONS" />
		<execute action="PGMediagallery#click" locator-key1="OPTIONS" />
		<execute action="PGMediagallery#click" locator-key1="OPTIONS_MENULIST_CONFIGURATION" />

		<execute action="PGMediagalleryConfiguration#assertElementPresent" locator-key1="MG_CONFIGURATION_IFRAME" />
		<execute action="PGMediagalleryConfiguration#check" locator-key1="MG_DISPLAY_SETTINGS_SHOW_ACTIONS_CHECKBOX" />
		<execute action="PGMediagalleryConfiguration#check" locator-key1="MG_DISPLAY_SETTINGS_SHOW_FOLDER_MENU_CHECKBOX" />
		<execute action="PGMediagalleryConfiguration#check" locator-key1="MG_DISPLAY_SETTINGS_SHOW_NAVIGATION_LINKS_CHECKBOX" />
		<execute action="PGMediagalleryConfiguration#check" locator-key1="MG_DISPLAY_SETTINGS_SHOW_SEARCH_CHECKBOX" />
		<execute action="PGMediagalleryConfiguration#click" locator-key1="SAVE_BUTTON" />
		<execute action="PGMediagalleryConfiguration#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="You have successfully updated the setup." />
		<execute action="PGMediagalleryConfiguration#click" locator-key1="CLOSE_ICON" />
	</command>

	<command name="pgAddDMFolder">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGMediagallery#click" locator-key1="FOLDER_MENU_ADD_FOLDER" />

		<execute action="PGMediagalleryAddfolder#type" locator-key1="NAME_FIELD" value1="${entryName}" />
		<execute action="PGMediagalleryAddfolder#type" locator-key1="DESCRIPTION_FIELD" value1="${entryDescription}" />
		<execute action="PGMediagalleryAddfolder#click" locator-key1="SAVE_BUTTON" />
		<execute action="PGMediagalleryAddfolder#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />

		<execute action="PGMediagallery#assertElementPresent" locator-key1="ENTRY_THUMBNAIL" />
		<execute action="PGMediagallery#assertTextEquals" locator-key1="ENTRY_TITLE" value1="${entryName}" />
	</command>

	<command name="pgEditDMFolder">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGMediagallery#assertTextEquals" locator-key1="ENTRY_TITLE" value1="${entryTitle}" />
		<execute action="PGMediagallery#click" locator-key1="ENTRY_TITLE" value1="${entryTitle}" />

		<execute action="PGMediagalleryFolder#click" locator-key1="FOLDER_MENU_EDIT" />

		<execute action="PGMediagalleryEditfolder#type" locator-key1="NAME_FIELD" value1="${entryName} Edit" />
		<execute action="PGMediagalleryEditfolder#type" locator-key1="DESCRIPTION_FIELD" value1="${entryDescription} Edit" />
		<execute action="PGMediagalleryEditfolder#click" locator-key1="SAVE_BUTTON" />
		<execute action="PGMediagalleryEditfolder#click" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="pgAddDMFolderImage">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGMediagallery#assertTextEquals" locator-key1="ENTRY_TITLE" value1="${entryTitle}" />
		<execute action="PGMediagallery#click" locator-key1="ENTRY_TITLE" value1="${entryTitle}" />

		<execute action="PGMediagalleryFolder#assertTextEquals" locator-key1="INFO_MESSAGE" value1="There are no media files in this folder." />
		<execute action="PGMediagalleryFolder#click" locator-key1="FOLDER_MENU_ADD_MEDIA" />
		<execute action="PGMediagalleryFolder#click" locator-key1="ADD_MEDIA_BASIC_DOCUMENT" />

		<execute action="PGMediagalleryAddmedia#uploadCommonFile" locator-key1="FILE" value1="Document_1.jpg" />
		<execute action="PGMediagalleryAddmedia#type" locator-key1="TITLE_FIELD" value1="${imageTitle}" />
		<execute action="PGMediagalleryAddmedia#type" locator-key1="DESCRIPTION_FIELD" value1="${imageDescription}" />
		<execute action="PGMediagalleryAddmedia#click" locator-key1="PUBLISH_BUTTON" />
		<execute action="PGMediagalleryAddmedia#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />

		<execute action="PGMediagallery#assertTextEquals" locator-key1="ENTRY_TITLE" value1="${entryTitle}" />
		<execute action="PGMediagallery#click" locator-key1="ENTRY_TITLE" value1="${entryTitle}" />

		<execute action="PGMediagalleryFolder#assertElementPresent" locator-key1="MEDIA_THUMBNAIL" />
		<execute action="PGMediagalleryFolder#assertElementPresent" locator-key1="MEDIA_TITLE" value1="${mediaTitle}" />
	</command>

	<command name="pgEditDMFolderImage">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGMediagallery#assertTextEquals" locator-key1="ENTRY_TITLE" value1="${entryTitle}" />
		<execute action="PGMediagallery#click" locator-key1="ENTRY_TITLE" value1="${entryTitle}" />

		<execute action="PGMediagalleryFolder#click" locator-key1="MEDIA_TITLE" />

		<execute action="PGMediagalleryMedia#assertTextEquals" locator-key1="MEDIA_CAPTION" value1="${mediaCaption}" />
		<execute action="PGMediagalleryMedia#click" locator-key1="EDIT" />

		<execute action="PGMediagalleryEditmedia#type" locator-key1="TITLE_FIELD" value1="${imageTitle} Edit" />
		<execute action="PGMediagalleryEditmedia#type" locator-key1="DESCRIPTION_FIELD" value1="${imageDescription} Edit" />
		<execute action="PGMediagalleryEditmedia#click" locator-key1="PUBLISH_BUTTON" />
		<execute action="PGMediagalleryEditmedia#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />

		<execute action="PGMediagalleryFolder#assertTextEquals" locator-key1="MEDIA_TITLE" value1="${mediaTitle} Edit" />
	</command>

	<command name="pgRemoveFolderImage">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGMediagallery#click" locator-key1="ENTRY_TITLE" />

		<execute action="PGMediagalleryFolder#click" locator-key1="MEDIA_TITLE" value1="${mediaTitle}"/>

		<execute action="PGMediagalleryMedia#click" locator-key1="DELETE" />

		<execute action="PGMediagalleryMedia#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete this?" />

		<execute action="PGMediagalleryFolder#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
		<execute action="PGMediagalleryFolder#assertTextEquals" locator-key1="INFO_MESSAGE" value1="There are no media files in this folder." />
	</command>

	<command name="pgTearDown" >
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<while>
			<condition action="PGMediagallery#isElementPresent" locator-key1="ENTRY_THUMBNAIL" />
			<then>
				<execute action="PGMediagallery#click" locator-key1="ENTRY_TITLE" />

				<execute action="PGMediagalleryFolder#click" locator-key1="FOLDER_MENU_DELETE" />
				<execute action="PGMediagalleryFolder#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete this?" />
				<execute action="PGMediagalleryFolder#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</then>
		</while>
	</command>
</definition>