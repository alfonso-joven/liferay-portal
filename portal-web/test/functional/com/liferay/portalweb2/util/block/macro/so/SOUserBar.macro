<definition>
	<command name="dashboardPG">
		<execute action="SOUserBar#click" locator-key1="DASHBOARD" />

		<execute action="SONavigation#assertTextEquals" locator-key1="PROFILE_NAME" value1="${userName}" />
	</command>

	<command name="gotoCP">
		<execute action="Home#open" locator-key1="GUEST_URL" />

		<execute action="SOUserBar#click" locator-key1="USER_NAME" />
		<execute action="SOUserBar#click" locator-key1="USER_MENU_CONTROL_PANEL" value1="Control Panel"/>

		<if>
			<isset var="siteScopeName" />
			<then>
				<execute action="Home#click" locator-key1="SCOPE_SELECTOR" />

				<var name="key_siteScopeName" value="${siteScopeName}" />

				<execute action="Home#click" locator-key1="SCOPE_SELECTOR_MENULIST_ITEM" />
			</then>
		</if>

		<if>
			<equals arg1="${portletName}" arg2="Workflow" />
			<then>
				<execute action="Home#click" locator1="xPath=(//ul[@class='category-portlets']/li/a[contains(.,'${portletName}')])[3]" />
			</then>
			<else>
				<execute action="Home#click" locator1="//ul[@class='category-portlets']/li/a[contains(.,'${portletName}')]" />
			</else>
		</if>
	</command>

	<command name="tearDownNotifications">
		<execute macro="SOUserBar#dashboardPG">
			<var name="userName" value="${userName}" />
		</execute>

		<execute action="SOUserBar#mouseOver" locator-key1="NOTIFICATION" />
		<execute action="SOUserBar#click" locator-key1="NOTIFICATION_MENU_VIEW_ALL" value1="View All" />

		<while>
			<condition action="SONotifications#isElementPresent" locator-key1="NOTIFICATIONS_CHECKBOX" />
			<then>
				<execute action="SONotifications#check" locator-key1="NOTIFICATIONS_CHECKBOX" />
				<execute action="SONotifications#click" locator-key1="DELETE_BUTTON" />
			</then>
		</while>
	</command>
</definition>