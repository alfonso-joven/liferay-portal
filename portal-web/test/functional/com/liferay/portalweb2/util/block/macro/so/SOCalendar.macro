<definition>
	<command name="AddCalendarEvent">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
			<var name="pageType" value="Open Site" />
		</execute>

		<execute macro="Event#addPG">
			<var name="eventDescription" value="${eventDescription}" />
			<var name="eventTitle" value="${eventTitle}" />
		</execute>

		<execute action="PGCalendar#click" locator-key1="EVENT_TABLE_TITLE" value1="${eventTitle}" />

		<execute macro="Event#ViewPG" />
	</command>

	<command name="DeleteCalendarEvent">
		<execute macro="Page#gotoPG">
			<var name="eventDescription" value="${eventDescription}" />
			<var name="pageName" value="${pageName}" />
			<var name="pageType" value="Open Site" />
		</execute>

		<execute macro="Event#deletePG">
		<var name="eventTitle" value="Calendar Event Title" />
		<var name="eventTitleEdit" value="Calendar Event Title Edit" />
		</execute>
	</command>

	<command name="EditCalendarEvent">
		<execute macro="Page#gotoPG">
			<var name="pageName" value="${pageName}" />
			<var name="pageType" value="Open Site" />
		</execute>

		<execute macro="Event#editPG">
			<var name="eventDescription" value="Calendar Event Description" />
			<var name="eventDescriptionEdit" value="Calendar Event Description Edit" />
			<var name="eventTitle" value="${eventTitle}" />
			<var name="eventTitleEdit" value="${eventTitleEdit}" />
		</execute>

		<execute action="PGCalendar#click" locator-key1="EVENT_TABLE_TITLE" value1="${eventTitle}" />

		<execute macro="Event#ViewPG">
			<var name="eventDescription" value="Calendar Event Description Edit" />
			<var name="eventTitle" value="${eventTitleEdit}" />
		</execute>
	</command>

	<command name="tearDownCP">
		<execute macro="SOUserBar#gotoCP">
			<var name="portletName" value="Calendar" />
		</execute>

		<execute action="PGCalendar#assertClick" locator-key1="VIEW_EVENTS" value1="Events" />

		<while>
			<condition action="CPCalendarEvents#isElementPresent" locator-key1="EVENT_TABLE_ACTIONS" value1="Actions" />
			<then>
				<execute action="CPCalendarEvents#assertClick" locator-key1="EVENT_TABLE_ACTIONS"  value1="Actions" />
				<execute action="CPCalendarEvents#assertClick" locator-key1="EVENT_MENULIST_DELETE" value1="Delete" />
				<execute action="CPCalendarEvents#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete this?" />
				<execute action="CPCalendarEvents#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</then>
		</while>

		<execute action="CPCalendarEvents#assertElementNotPresent" locator-key1="EVENT_TABLE_ACTIONS" value1="Actions" />
	</command>
</definition>