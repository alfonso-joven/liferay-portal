<definition>
	<command name="addCP">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="Categories" />
		</execute>

		<execute action="CPCategories#click" locator-key1="VOCABULARY_ENTRY_2" value1="${vocabularyName}" />
		<execute action="CPCategories#click" locator-key1="ADD_CATEGORY_BUTTON" />
		<execute action="CPCategories#type" locator-key1="ADD_CATEGORY_NAME_FIELD" value1="${categoryName}" />
		<execute action="CPCategories#click" locator-key1="ADD_CATEGORY_SAVE_BUTTON" />
		<execute action="CPCategories#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
		<execute action="CPCategories#assertTextEquals" locator-key1="VOCABULARY_CATEGORY_1" value1="${categoryName}" />
	</command>

	<command name="deleteCPByActions">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="Categories" />
		</execute>

		<execute action="CPCategories#click" locator-key1="VOCABULARY_ENTRY_2" value1="${vocabularyName}" />
		<execute action="CPCategories#assertTextEquals" locator-key1="VOCABULARY_CATEGORY_1" value1="${categoryName}" />
		<execute action="CPCategories#click" locator-key1="ALL_CATEGORIES_CHECKBOX" />
		<execute action="CPCategories#click" locator-key1="ACTIONS_BUTTON" />
		<execute action="CPCategories#click" locator-key1="ACTIONS_MENULIST_DELETE" />
		<execute action="CPCategories#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete the selected categories?" />
		<execute action="CPCategories#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
		<execute action="CPCategories#assertTextEquals" locator-key1="INFO_MESSAGE" />
		<execute action="CPCategories#assertTextNotPresent" value1="${categoryName}" />
	</command>

	<command name="editCP">
		<execute macro="Page#gotoCP">
			<var name="portletName" value="Categories" />
		</execute>

		<execute action="CPCategories#click" locator-key1="VOCABULARY_ENTRY_2" value1="${vocabularyName}" />
		<execute action="CPCategories#click" locator-key1="VOCABULARY_CATEGORY_1" value1="${categoryName}" />
		<execute action="CPCategories#click" locator-key1="CATEGORY_DETAILS_EDIT_BUTTON" />
		<execute action="CPCategories#type" locator-key1="EDIT_CATEGORY_NAME_FIELD" value1="${categoryNameEdit}" />
		<execute action="CPCategories#click" locator-key1="EDIT_CATEGORY_SAVE_BUTTON" />
		<execute action="CPCategories#assertTextEquals" locator-key1="SUCCESS_MESSAGE" />
		<execute action="CPCategories#assertTextEquals" locator-key1="VOCABULARY_CATEGORY_1" value1="${categoryNameEdit}" />
	</command>
</definition>