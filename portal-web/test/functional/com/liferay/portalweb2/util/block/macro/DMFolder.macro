<definition>
	<command name="addPGviaMG">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGMediagallery#click" locator-key1="FOLDER_MENU_ADD_FOLDER" />

		<execute action="PGMediagalleryAddfolder#type" locator-key1="NAME_FIELD" value1="${folderName}" />
		<execute action="PGMediagalleryAddfolder#type" locator-key1="DESCRIPTION_FIELD" value1="${folderDescription}" />
		<execute action="PGMediagalleryAddfolder#click" locator-key1="SAVE_BUTTON" />
		<execute action="PGMediagalleryAddfolder#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />

		<execute action="PGMediagallery#assertElementPresent" locator-key1="ENTRY_THUMBNAIL" />
		<execute action="PGMediagallery#assertTextEquals" locator-key1="ENTRY_TITLE" value1="${folderName}" />
	</command>

	<command name="editPGviaMG">
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<execute action="PGMediagallery#assertTextEquals" locator-key1="ENTRY_TITLE" value1="${folderName}" />
		<execute action="PGMediagallery#click" locator-key1="ENTRY_TITLE" value1="${folderName}" />

		<execute action="PGMediagalleryFolder#click" locator-key1="FOLDER_MENU_EDIT" />

		<execute action="PGMediagalleryEditfolder#type" locator-key1="NAME_FIELD" value1="${folderName} Edit" />
		<execute action="PGMediagalleryEditfolder#type" locator-key1="DESCRIPTION_FIELD" value1="${folderDescription} Edit" />
		<execute action="PGMediagalleryEditfolder#click" locator-key1="SAVE_BUTTON" />
		<execute action="PGMediagalleryEditfolder#click" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
	</command>

	<command name="tearDownPGviaMG" >
		<execute macro="Page#pgGoto">
			<var name="pageName" value="${pageName}" />
		</execute>

		<while>
			<condition action="PGMediagallery#isElementPresent" locator-key1="ENTRY_THUMBNAIL" />
			<then>
				<execute action="PGMediagallery#click" locator-key1="ENTRY_TITLE" />

				<execute action="PGMediagalleryFolder#click" locator-key1="FOLDER_MENU_DELETE" />
				<execute action="PGMediagalleryFolder#confirm" locator-key1="CONFIRMATION" value1="Are you sure you want to delete this?" />
				<execute action="PGMediagalleryFolder#assertTextEquals" locator-key1="SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</then>
		</while>
	</command>
</definition>